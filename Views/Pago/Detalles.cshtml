@model InmobiliariaAppAguileraBecerra.Models.Pago
@{
    ViewData["Title"] = "Detalles del Pago";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">
            <i class="bi bi-cash-stack"></i> Detalles del Pago #@Model.Id
        </h2>
        <a asp-action="Index" asp-route-contratoId="@Model.ContratoId" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Volver
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-semibold">NÃºmero:</dt>
                <dd class="col-sm-9">@Model.Numero</dd>

                <dt class="col-sm-3 fw-semibold">Fecha:</dt>
                <dd class="col-sm-9">@Model.Fecha.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3 fw-semibold">Importe:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-success">$@Model.Importe.ToString("N2")</span>
                </dd>

                <dt class="col-sm-3 fw-semibold">Detalle:</dt>
                <dd class="col-sm-9">@Model.Detalle</dd>

                <dt class="col-sm-3 fw-semibold">Estado:</dt>
                <dd class="col-sm-9">
                    @if (Model.Anulado)
                    {
                        <span class="badge bg-danger">Anulado</span>
                    }
                    else
                    {
                        <span class="badge bg-primary">Activo</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
        <a asp-action="Index" asp-route-contratoId="@Model.ContratoId" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Volver
        </a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
