@model IEnumerable<InmobiliariaAppAguileraBecerra.Models.Usuario>

@{
    ViewData["Title"] = "Listado de Usuarios";
    var rnd = new Random();
}

<h1 class="mb-4 text-primary"><i class="bi bi-people-fill"></i> @ViewData["Title"]</h1>

<p>
    <a class="btn btn-success" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Nuevo Usuario
    </a>
</p>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Apellido)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Avatar)</th>
            <th>@Html.DisplayNameFor(model => model.Rol)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nombre</td>
                    <td>@item.Apellido</td>
                    <td>@item.Email</td>
                    <td>
                        @if(!String.IsNullOrEmpty(item.Avatar))
                        {
                            var x = item.Avatar + "?" + rnd.Next();
                            <img width="32" class="rounded-circle" src="@x" />
                        }
                        else
                        {
                            <img width="32" class="rounded-circle" src="https://ui-avatars.com/api/?rounded=true&name=@item.Nombre+@item.Apellido" />
                        }
                    </td>
                    <td>@item.RolNombre</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id" title="Edit">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id" title="Delete">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center text-muted">
                    <i class="bi bi-exclamation-triangle-fill"></i> No hay usuarios registrados.
                </td>
            </tr>
        }
    </tbody>
</table>
