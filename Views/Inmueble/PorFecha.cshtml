@model IEnumerable<InmobiliariaAppAguileraBecerra.Models.Inmueble>

@{
    ViewData["Title"] = "Inmuebles disponibles por fecha";
    var rnd = new Random();
}

<h1>Inmuebles disponibles por fecha</h1>

<form method="get" asp-action="PorFecha" class="row g-3 mb-4">
    <div class="col-md-3">
        <label for="fechaInicio" class="form-label">Fecha inicio:</label>
        <input type="date" id="fechaInicio" name="fechaInicio" value="@ViewBag.FechaInicio?.ToString("yyyy-MM-dd")" class="form-control" required />
    </div>
    <div class="col-md-3">
        <label for="fechaFin" class="form-label">Fecha fin:</label>
        <input type="date" id="fechaFin" name="fechaFin" value="@ViewBag.FechaFin?.ToString("yyyy-MM-dd")" class="form-control" required />
    </div>
    <div class="col-md-3 align-self-end">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> Buscar
        </button>
    </div>
</form>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                <th>@Html.DisplayNameFor(model => model.First().Direccion)</th>
                <th>@Html.DisplayNameFor(model => model.First().Ambientes)</th>
                <th>Propietario</th>
                <th>@Html.DisplayNameFor(model => model.First().Portada)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Direccion</td>
                    <td>@item.Ambientes</td>
                    <td>@(item.Duenio != null ? $"{item.Duenio.Nombre} {item.Duenio.Apellido}" : "Sin propietario")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Portada))
                        {
                            var x = item.Portada + "?" + rnd.Next();
                            <img src="@x" width="50" class="img-thumbnail" />
                        }
                        else
                        {
                            <span class="text-muted">Sin foto</span>
                        }
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-primary btn-sm" asp-action="Editar" asp-route-id="@item.Id" title="Editar">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a class="btn btn-danger btn-sm" asp-action="Eliminar" asp-route-id="@item.Id" title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </a>
                            <a class="btn btn-secondary btn-sm" asp-action="Imagenes" asp-route-id="@item.Id" title="Ver imÃ¡genes">
                                <i class="bi bi-images"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else if(ViewBag.FechaInicio != null && ViewBag.FechaFin != null)
{
    <p class="text-muted">No hay inmuebles disponibles entre @ViewBag.FechaInicio?.ToString("dd/MM/yyyy") y @ViewBag.FechaFin?.ToString("dd/MM/yyyy").</p>
}
else
{
    <p class="text-muted">Seleccione un rango de fechas para ver los inmuebles disponibles.</p>
}
