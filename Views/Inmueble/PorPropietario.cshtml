@model IEnumerable<InmobiliariaAppAguileraBecerra.Models.Inmueble>

@{
    ViewData["Title"] = "Inmuebles por Propietario";
    var propietario = ViewBag.Propietario;
}

<h1>Inmuebles de @propietario.Nombre @propietario.Apellido</h1>

<p>
    <a class="btn btn-primary" asp-action="Crear" asp-route-propietarioId="@propietario.Id">
        <i class="fa-solid fa-plus"></i> Nuevo Inmueble
    </a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Id)</th>
            <th>@Html.DisplayNameFor(model => model.First().Direccion)</th>
            <th>@Html.DisplayNameFor(model => model.First().Ambientes)</th>
            <th>@Html.DisplayNameFor(model => model.First().Latitud)</th>
            <th>@Html.DisplayNameFor(model => model.First().Longitud)</th>
            <th>Propietario</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Direccion</td>
                <td>@item.Ambientes</td>
                <td>@item.Latitud</td>
                <td>@item.Longitud</td>
                <td>@(item.Duenio != null ? $"{item.Duenio.Nombre} {item.Duenio.Apellido}" : "")</td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary" asp-action="Editar" asp-route-id="@item.Id" title="Editar">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a class="btn btn-secondary" asp-action="Detalle" asp-route-id="@item.Id" title="Detalle">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                        <a class="btn btn-danger" asp-action="Eliminar" asp-route-id="@item.Id" title="Eliminar">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
