@model InmobiliariaAppAguileraBecerra.Models.Inmueble
@using InmobiliariaAppAguileraBecerra.Models

@{
    ViewData["Title"] = "Crear Inmueble";
    var ltaPropietarios = (IList<Propietario>?)ViewData["Propietarios"] ?? new List<Propietario>();
    var tiposInmueble = Inmueble.ObtenerTipos();
}

<h1 class="mb-4 text-primary">
    <i class="bi bi-house-door-fill"></i> @ViewData["Title"]
</h1>

<h4>Inmueble</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Crear" method="post" class="shadow-sm p-4 rounded bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Direccion" class="form-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Uso" class="form-label"></label>
                <input asp-for="Uso" class="form-control" />
                <span asp-validation-for="Uso" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Tipo" class="form-label"></label>
                <select asp-for="Tipo" class="form-select">
                    <option value="">-- Seleccione un tipo --</option>
                    @foreach (var tipo in tiposInmueble)
                    {
                        <option value="@tipo.Key">@tipo.Value</option>
                    }
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Ambientes" class="form-label"></label>
                <input asp-for="Ambientes" class="form-control" />
                <span asp-validation-for="Ambientes" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Latitud" class="form-label"></label>
                <input asp-for="Latitud" class="form-control" />
                <span asp-validation-for="Latitud" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Longitud" class="form-label"></label>
                <input asp-for="Longitud" class="form-control" />
                <span asp-validation-for="Longitud" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Precio" class="form-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Propietario</label>
                <select class="form-select" name="PropietarioId">
                    <option value="">-- Seleccione un propietario --</option>
                    @foreach (var item in ltaPropietarios)
                    {
                        <option value="@item.Id">@item.Nombre @item.Apellido</option>
                    }
                </select>
                <span asp-validation-for="PropietarioId" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Lista">Volver</a>
            </div>
        </form>
    </div>
</div>
