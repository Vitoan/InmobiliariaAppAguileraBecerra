@using InmobiliariaAppAguileraBecerra.Models
@model InmobiliariaAppAguileraBecerra.Models.Inmueble

@{
    ViewData["Title"] = "Editar Inmueble";
    var Propietarios = (IList<Propietario>)ViewBag.Propietarios;
    var tiposInmueble = Inmueble.ObtenerTipos();
}

<h1 class="mb-4 text-primary">
    <i class="bi bi-house-door-fill"></i> @ViewData["Title"]
</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Editar" method="post" enctype="multipart/form-data" class="shadow-sm p-4 rounded bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Direccion" class="form-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Uso" class="form-label"></label>
                <input asp-for="Uso" class="form-control" />
                <span asp-validation-for="Uso" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Tipo" class="form-label"></label>
                <select asp-for="Tipo" class="form-select">
                    <option value="">-- Seleccione un tipo --</option>
                    @foreach (var tipo in tiposInmueble)
                    {
                        <option value="@tipo.Key" selected="@(tipo.Key == Model.Tipo)">
                            @tipo.Value
                        </option>
                    }
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Ambientes" class="form-label"></label>
                <input asp-for="Ambientes" type="number" class="form-control" />
                <span asp-validation-for="Ambientes" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Latitud" class="form-label"></label>
                <input asp-for="Latitud" type="number" step="any" class="form-control" />
                <span asp-validation-for="Latitud" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Longitud" class="form-label"></label>
                <input asp-for="Longitud" type="number" step="any" class="form-control" />
                <span asp-validation-for="Longitud" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Precio" class="form-label"></label>
                <input asp-for="Precio" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="Disponible" class="form-check-input" type="checkbox" />
                <label asp-for="Disponible" class="form-check-label"></label>
            </div>

            <div class="form-check mb-3">
                <input asp-for="Habilitado" class="form-check-input" type="checkbox" />
                <label asp-for="Habilitado" class="form-check-label"></label>
            </div>

            <div class="mb-3">
                <label class="form-label">Propietario</label>
                <select asp-for="PropietarioId" class="form-select">
                    <option value="">-- Seleccione un propietario --</option>
                    @foreach (var item in Propietarios)
                    {
                        <option value="@item.Id" selected="@(item.Id == Model.PropietarioId)">
                            @item.Nombre @item.Apellido
                        </option>
                    }
                </select>
                <span asp-validation-for="PropietarioId" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <input type="submit" value="Guardar cambios" class="btn btn-primary" />
                <a asp-action="Lista" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>
