@model IEnumerable<InmobiliariaAppAguileraBecerra.Models.Inmueble>

@{
    ViewData["Title"] = "Inmuebles";
    var Pagina = ViewBag.Pagina ?? 1;
    var TotalPaginas = ViewBag.TotalPaginas ?? 1;
}

<h1>
    Inmuebles
    <div class="btn-group pull-right">
        <a class="btn btn-primary" asp-action="Crear" title="Crear"><i class="fa-solid fa-plus"></i></a>
    </div>
</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Id)</th>
            <th>@Html.DisplayNameFor(model => model.First().Direccion)</th>
            <th>@Html.DisplayNameFor(model => model.First().Uso)</th>
            <th>@Html.DisplayNameFor(model => model.First().Tipo)</th>
            <th>@Html.DisplayNameFor(model => model.First().Ambientes)</th>
            <th>@Html.DisplayNameFor(model => model.First().Precio)</th>
            <th>Propietario</th>
            <th>@Html.DisplayNameFor(model => model.First().Disponible)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                <td>@Html.DisplayFor(modelItem => item.Uso)</td>
                <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                <td>@Html.DisplayFor(modelItem => item.Ambientes)</td>
                <td>@item.Precio.ToString("C")</td>
                <td>@(item.Duenio != null ? $"{item.Duenio.Nombre} {item.Duenio.Apellido}" : "")</td>
                <td>@(item.Disponible ? "Disponible" : "Suspendido")</td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary" asp-action="Editar" asp-route-id="@item.Id" title="Editar">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a class="btn btn-danger" asp-action="Eliminar" asp-route-id="@item.Id" title="Eliminar">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>
                        <a class="btn btn-secondary" asp-action="Imagenes" asp-route-id="@item.Id" title="Ver ImÃ¡genes">
                            <i class="fa-solid fa-image"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (Pagina > 1)
        {
            <li class="page-item">
                <a class="page-link" href="~/Inmuebles/Lista?pagina=@(Pagina - 1)" aria-label="Anterior">
                    <i class="fa-solid fa-angles-left"></i>
                </a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <span class="page-link"><i class="fa-solid fa-angles-left"></i></span>
            </li>
        }

        @for (int i = 1; i <= TotalPaginas; i++)
        {
            <li class="page-item @(i == Pagina ? "active" : "")">
                <a class="page-link" href="~/Inmuebles/Lista?pagina=@i">@i</a>
            </li>
        }

        @if (Pagina < TotalPaginas)
        {
            <li class="page-item">
                <a class="page-link" href="~/Inmuebles/Lista?pagina=@(Pagina + 1)" aria-label="Siguiente">
                    <i class="fa-solid fa-angles-right"></i>
                </a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <span class="page-link"><i class="fa-solid fa-angles-right"></i></span>
            </li>
        }
    </ul>
</nav>
