@model InmobiliariaAppAguileraBecerra.Models.Propietario

@{
    ViewData["Title"] = "Eliminar Propietario";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">
                <i class="bi bi-exclamation-triangle"></i> @ViewData["Title"]
            </h4>
        </div>

        <div class="card-body">
            <p class="text-warning fw-semibold">
                Atención: no se podrá eliminar si tiene inmuebles asociados.
            </p>

            <h5 class="mb-3">¿Estás seguro de que quieres eliminar este propietario?</h5>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Success"]
                </div>
            }

            <div class="mb-4">
                <h6>Datos del Propietario</h6>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">ID</dt>
                    <dd class="col-sm-9">@Model.Id</dd>

                    <dt class="col-sm-3">Nombre</dt>
                    <dd class="col-sm-9">@Model.Nombre</dd>

                    <dt class="col-sm-3">Apellido</dt>
                    <dd class="col-sm-9">@Model.Apellido</dd>

                    <dt class="col-sm-3">DNI</dt>
                    <dd class="col-sm-9">@Model.DNI</dd>

                    <dt class="col-sm-3">Teléfono</dt>
                    <dd class="col-sm-9">@Model.Telefono</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Model.Email</dd>
                </dl>
            </div>

            <form asp-action="Eliminar" method="post" class="d-flex justify-content-between">
                <input type="hidden" asp-for="Id" />
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Volver
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Eliminar
                </button>
            </form>
        </div>
    </div>
</div>
