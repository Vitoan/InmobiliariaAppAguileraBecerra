@model InmobiliariaAppAguileraBecerra.Models.Propietario

@{
    ViewData["Title"] = "Detalles del Propietario";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">
            <i class="bi bi-person-lines-fill"></i> @ViewData["Title"]
        </h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Volver
        </a>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h4 class="card-title text-dark mb-3">
                <i class="bi bi-info-circle"></i> Información General
            </h4>

            <dl class="row">
                <dt class="col-sm-3">ID:</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>

                <dt class="col-sm-3">Apellido:</dt>
                <dd class="col-sm-9">@Model.Apellido</dd>

                <dt class="col-sm-3">DNI:</dt>
                <dd class="col-sm-9">@Model.DNI</dd>

                <dt class="col-sm-3">Teléfono:</dt>
                <dd class="col-sm-9">@Model.Telefono</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>
            </dl>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Volver
        </a>
    </div>
</div>
