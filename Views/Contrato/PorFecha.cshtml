@model IEnumerable<InmobiliariaAppAguileraBecerra.Models.Contrato>

@{
    ViewData["Title"] = "Contratos por Fecha";
}

<h1 class="mb-4 text-primary"><i class="bi bi-file-earmark-text-fill"></i> @ViewData["Title"]</h1>

<form method="get" class="row g-3 mb-4">
    <div class="col-auto">
        <label for="fechaInicio" class="form-label">Fecha Inicio</label>
        <input type="date" id="fechaInicio" name="fechaInicio" class="form-control"
               value="@(ViewBag.FechaInicio != null ? ((DateTime)ViewBag.FechaInicio).ToString("yyyy-MM-dd") : "")" />
    </div>
    <div class="col-auto">
        <label for="fechaFin" class="form-label">Fecha Fin</label>
        <input type="date" id="fechaFin" name="fechaFin" class="form-control"
               value="@(ViewBag.FechaFin != null ? ((DateTime)ViewBag.FechaFin).ToString("yyyy-MM-dd") : "")" />
    </div>
    <div class="col-auto align-self-end">
        <button type="submit" class="btn btn-primary mb-3">
            <i class="bi bi-funnel"></i> Filtrar
        </button>
    </div>
</form>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>Inquilino</th>
            <th>Inmueble</th>
            <th>@Html.DisplayNameFor(model => model.FechaInicio)</th>
            <th>@Html.DisplayNameFor(model => model.FechaFin)</th>
            <th>@Html.DisplayNameFor(model => model.Monto)</th>
            <th>Vigente</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@(item.Inquilino != null ? $"{item.Inquilino.Nombre} {item.Inquilino.Apellido}" : "Sin inquilino")</td>
                    <td>@(item.Inmueble != null ? item.Inmueble.Direccion : "Sin inmueble")</td>
                    <td>@item.FechaInicio.ToShortDateString()</td>
                    <td>@item.FechaFin.ToShortDateString()</td>
                    <td>@item.Monto.ToString("C")</td>
                    <td>@(item.Vigente ? "SÃ­" : "No")</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-primary btn-sm" asp-action="Editar" asp-route-id="@item.Id" title="Editar">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a class="btn btn-info btn-sm" asp-action="Detalles" asp-route-id="@item.Id" title="Detalles">
                                <i class="bi bi-eye"></i> Detalles
                            </a>
                            <a class="btn btn-warning btn-sm"
                               asp-controller="Pago"
                               asp-action="Index"
                               asp-route-contratoId="@item.Id"
                               title="Ver Pagos">
                                <i class="bi bi-cash-stack"></i> Pagos
                            </a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center text-muted">
                    <i class="bi bi-exclamation-triangle-fill"></i> No hay contratos vigentes en este rango de fechas.
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a class="btn btn-secondary" asp-action="Index" asp-controller="Home">
        <i class="bi bi-arrow-left-circle"></i> Volver al Inicio
    </a>
</div>
