@model IEnumerable<InmobiliariaAppAguileraBecerra.Models.Contrato>

@{
    ViewData["Title"] = "Contratos por Inmueble";
    var inmuebles = ViewBag.Inmuebles as IEnumerable<InmobiliariaAppAguileraBecerra.Models.Inmueble>;
    var inmuebleSeleccionadoId = ViewBag.InmuebleSeleccionadoId as int?;
}

<h1 class="mb-4 text-primary">@ViewData["Title"]</h1>

<form method="get" class="row g-3 mb-4">
    <div class="col-auto">
        <label for="inmuebleId" class="form-label">Seleccione Inmueble</label>
        <select id="inmuebleId" name="inmuebleId" class="form-select">
            <option value="">-- Todos --</option>
            @if (inmuebles != null)
            {
                foreach (var i in inmuebles)
                {
                    if (inmuebleSeleccionadoId == i.Id)
                    {
                        <option value="@i.Id" selected="selected">@i.Direccion</option>
                    }
                    else
                    {
                        <option value="@i.Id">@i.Direccion</option>
                    }
                }
            }
        </select>
    </div>
    <div class="col-auto align-self-end">
        <button type="submit" class="btn btn-primary mb-3">Filtrar</button>
    </div>
</form>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>Inquilino</th>
            <th>Inmueble</th>
            <th>@Html.DisplayNameFor(model => model.FechaInicio)</th>
            <th>@Html.DisplayNameFor(model => model.FechaFin)</th>
            <th>@Html.DisplayNameFor(model => model.Monto)</th>
            <th>Vigente</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@(item.Inquilino != null ? $"{item.Inquilino.Nombre} {item.Inquilino.Apellido}" : "Sin inquilino")</td>
                    <td>@(item.Inmueble != null ? item.Inmueble.Direccion : "Sin inmueble")</td>
                    <td>@item.FechaInicio.ToShortDateString()</td>
                    <td>@item.FechaFin.ToShortDateString()</td>
                    <td>@item.Monto.ToString("C")</td>
                    <td>@(item.Vigente ? "SÃ­" : "No")</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-primary btn-sm" asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-info btn-sm" asp-action="Detalles" asp-route-id="@item.Id">Detalles</a>
                            <a class="btn btn-warning btn-sm"
                               asp-controller="Pago"
                               asp-action="Index"
                               asp-route-contratoId="@item.Id">Pagos</a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center text-muted">
                    No hay contratos para el inmueble seleccionado.
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a class="btn btn-secondary" asp-action="Index" asp-controller="Home">Volver al Inicio</a>
</div>
