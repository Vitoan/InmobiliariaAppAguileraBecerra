@using InmobiliariaAppAguileraBecerra.Models
@model Contrato

@{
    ViewData["Title"] = "Detalles del Contrato";
    var auditorias = ViewBag.Auditorias as IEnumerable<Auditoria>;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">
            <i class="bi bi-file-earmark-text"></i> @ViewData["Title"]
        </h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Volver
        </a>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h4 class="card-title text-dark mb-3">
                <i class="bi bi-info-circle"></i> Información General
            </h4>

            <dl class="row">
                <dt class="col-sm-3">ID Contrato:</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Inquilino:</dt>
                <dd class="col-sm-9">@Model.Inquilino?.Nombre @Model.Inquilino?.Apellido</dd>

                <dt class="col-sm-3">Inmueble:</dt>
                <dd class="col-sm-9">@Model.Inmueble?.Direccion</dd>

                <dt class="col-sm-3">Fecha de Inicio:</dt>
                <dd class="col-sm-9">@Model.FechaInicio.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Fecha de Fin:</dt>
                <dd class="col-sm-9">@Model.FechaFin.ToString("dd/MM/yyyy")</dd>

                @if (Model.FechaFinAnticipada != null)
                {
                    <dt class="col-sm-3 text-danger">Finalización Anticipada:</dt>
                    <dd class="col-sm-9 text-danger">@Model.FechaFinAnticipada?.ToString("dd/MM/yyyy")</dd>
                }

                <dt class="col-sm-3">Monto mensual:</dt>
                <dd class="col-sm-9">$@Model.Monto.ToString("N2")</dd>

                <dt class="col-sm-3">Multa:</dt>
                <dd class="col-sm-9">@Model.Multa != null ? "$" + Model.Multa.Value.ToString("N2") : "-"</dd>
                <dt class="col-sm-3">Vigente:</dt>
                <dd class="col-sm-9">
                    @if (Model.Vigente)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Finalizado</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="text-end mb-4">
        <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil-square"></i> Editar
        </a>

        @if (User.IsInRole("Administrador") && Model.Vigente)
        {
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modalTerminar">
                <i class="bi bi-x-circle"></i> Terminar Contrato
            </button>
        }
    </div>

    <!-- Modal de terminación -->
    <div class="modal fade" id="modalTerminar" tabindex="-1" aria-labelledby="modalTerminarLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="Terminar" method="post">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title" id="modalTerminarLabel"><i class="bi bi-exclamation-triangle"></i> Terminar Contrato</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="mb-3">
                            <label for="fechaFinAnticipada" class="form-label">Fecha de finalización anticipada</label>
                            <input type="date" name="fechaFinAnticipada" id="fechaFinAnticipada" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label for="multa" class="form-label">Monto de multa</label>
                            <input type="number" step="0.01" name="multa" id="multa" class="form-control" placeholder="0.00" />
                        </div>
                        <p class="text-muted">Esta acción no puede deshacerse.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-danger">Confirmar Terminación</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Sección de auditoría -->
    @if (User.IsInRole("Administrador"))
    {
        <div class="card mt-5 border-primary shadow-sm">
            <div class="card-header bg-primary text-white d-flex align-items-center">
                <i class="bi bi-shield-check me-2"></i>
                <h5 class="mb-0">Historial de Auditoría</h5>
            </div>
            <div class="card-body">
                @if (auditorias != null && auditorias.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Fecha</th>
                                    <th>Operación</th>
                                    <th>Usuario</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var a in auditorias)
                                {
                                    <tr>
                                        <td>@a.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            @switch (a.Operacion)
                                            {
                                                case "Alta":
                                                    <span class="badge bg-success">Alta</span>; break;
                                                case "Modificación":
                                                    <span class="badge bg-warning text-dark">Modificación</span>; break;
                                                case "Terminación":
                                                    <span class="badge bg-danger">Terminación</span>; break;
                                                default:
                                                    <span class="badge bg-secondary">@a.Operacion</span>; break;
                                            }
                                        </td>
                                        <td>@a.Usuario</td>
                                        <td>
                                            <a asp-controller="Auditoria" asp-action="Detalles" asp-route-id="@a.Id" class="btn btn-outline-info btn-sm">
                                                <i class="bi bi-eye"></i> Ver
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-muted">No hay registros de auditoría para este contrato.</div>
                }
            </div>
        </div>
    }
</div>
