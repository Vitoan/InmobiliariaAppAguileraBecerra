@model InmobiliariaAppAguileraBecerra.Models.Contrato

@{
    ViewData["Title"] = "Detalles del Contrato";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">
            <i class="bi bi-file-text"></i> Detalles del Contrato
        </h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Volver al listado
        </a>
    </div>

    <!-- ALERTAS -->
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle"></i> @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h4 class="text-dark mb-3"><i class="bi bi-info-square"></i> Información General</h4>

            <dl class="row mb-0">
                <dt class="col-sm-4">Código:</dt>
                <dd class="col-sm-8">@Model.Id</dd>

                <dt class="col-sm-4">Fecha de Inicio:</dt>
                <dd class="col-sm-8">@Model.FechaInicio.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4">Fecha de Finalización:</dt>
                <dd class="col-sm-8">@Model.FechaFin.ToString("dd/MM/yyyy")</dd>

                @if (Model.FechaFinAnticipada != null)
                {
                    <dt class="col-sm-4 text-danger">Fin Anticipado:</dt>
                    <dd class="col-sm-8 text-danger fw-bold">@Model.FechaFinAnticipada?.ToString("dd/MM/yyyy")</dd>
                }

                <dt class="col-sm-4">Monto Mensual:</dt>
                <dd class="col-sm-8">$@Model.Monto.ToString("N2")</dd>

                <dt class="col-sm-4">Estado:</dt>
                <dd class="col-sm-8">
                    @if (Model.Vigente)
                    {
                        <span class="badge bg-success">Vigente</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Finalizado</span>
                    }
                </dd>

                <dt class="col-sm-4">Inquilino:</dt>
                <dd class="col-sm-8">
                    @(Model.Inquilino != null ? $"{Model.Inquilino.Nombre} {Model.Inquilino.Apellido}" : "-")
                </dd>

                <dt class="col-sm-4">Inmueble:</dt>
                <dd class="col-sm-8">
                    @(Model.Inmueble != null ? Model.Inmueble.Direccion : "-")
                </dd>
            </dl>
        </div>
    </div>

    <!-- SECCIÓN DE MULTA Y DEUDA -->
    <div class="card shadow-sm border-0 mt-4">
        <div class="card-body">
            <h4 class="text-dark mb-3"><i class="bi bi-cash-coin"></i> Multa y Deuda</h4>

            <div class="row">
                <div class="col-md-4">
                    <div class="p-3 border rounded bg-light">
                        <h6 class="text-muted mb-1">Multa</h6>
                        <h5 class="text-danger">
                            @(Model.Multa.HasValue ? "$" + Model.Multa.Value.ToString("N2") : "Ninguna")
                        </h5>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="p-3 border rounded bg-light">
                        <h6 class="text-muted mb-1">Deuda (calculada al finalizar)</h6>
                        <h5 class="text-warning">Se calcula al finalizar</h5>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="p-3 border rounded bg-light">
                        <h6 class="text-muted mb-1">Total pendiente</h6>
                        <h5 class="fw-bold text-success">
                            @(Model.Multa.HasValue ? "$" + Model.Multa.Value.ToString("N2") : "-")
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- FORMULARIO DE FINALIZACIÓN ANTICIPADA -->
    @if (Model.Vigente)
    {
        <div class="card shadow-sm border-0 mt-4">
            <div class="card-body">
                <h4 class="text-danger mb-3">
                    <i class="bi bi-x-circle"></i> Finalizar Contrato Anticipadamente
                </h4>

                <form asp-action="FinalizarAnticipado" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Fecha de finalización anticipada</label>
                        <input type="date" name="fechaFinAnticipada" class="form-control" required />
                    </div>

                    <p class="text-muted">
                        * Si el contrato se cumple menos del 50%, la multa será de <strong>2 meses</strong> de alquiler.  
                        Si se cumplió más del 50%, será de <strong>1 mes</strong>.
                    </p>

                    <button type="submit" class="btn btn-danger mt-2">
                        <i class="bi bi-stop-circle"></i> Finalizar anticipadamente
                    </button>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-secondary mt-4">
            <i class="bi bi-check-circle"></i> Este contrato ya fue finalizado.
        </div>
    }
</div>
