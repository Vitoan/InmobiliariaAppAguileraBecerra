@{
    ViewData["Title"] = "Inicio - Inmobiliaria";
    bool IsAdmin = User?.IsInRole("Administrador") ?? false;
}

<div class="container mt-5">
    <div class="p-5 mb-4 bg-light rounded-3 shadow-sm text-center">
        <h1 class="display-4 fw-bold">Panel de Inmobiliaria Aguilera & Becerra</h1>
        <p class="lead mb-4">Acceso rápido a todas las secciones de gestión interna.</p>
    </div>

    <div class="row text-center">
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-house-door-fill display-4 mb-3 text-primary"></i>
                    <h5 class="card-title">Inmuebles</h5>
                    <a class="btn btn-primary" asp-controller="Inmueble" asp-action="Lista">Ver Inmuebles</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-person-lines-fill display-4 mb-3 text-primary"></i>
                    <h5 class="card-title">Propietarios</h5>
                    <a class="btn btn-primary" asp-controller="Propietario" asp-action="Index">Ver Propietarios</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-people-fill display-4 mb-3 text-primary"></i>
                    <h5 class="card-title">Inquilinos</h5>
                    <a class="btn btn-primary" asp-controller="Inquilino" asp-action="Index">Ver Inquilinos</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-file-earmark-text-fill display-4 mb-3 text-primary"></i>
                    <h5 class="card-title">Contratos</h5>
                    <a class="btn btn-primary" asp-controller="Contrato" asp-action="Index">Ver Contratos</a>
                </div>
            </div>
        </div>
        @if (IsAdmin)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <i class="bi bi-person-badge-fill display-4 mb-3 text-primary"></i>
                        <h5 class="card-title">Usuarios</h5>
                        <a class="btn btn-primary" asp-controller="Usuarios" asp-action="Index">Gestionar Usuarios</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
